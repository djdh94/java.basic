package game.interaction;

public class Monster {

	private int hp;
	private int atk;
	private int def;
	
	public Monster() {
		this.hp=10;
		this.atk=5;
		this.def=2;
	}
	
	public void doBattle(int uAtk) {
		// 몬스터의 체력을 유지 공격력 만큼 차감시키기
		hp=(hp+def)-uAtk;
		System.out.println("몬스터의 남은체력: "+hp);
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
}
