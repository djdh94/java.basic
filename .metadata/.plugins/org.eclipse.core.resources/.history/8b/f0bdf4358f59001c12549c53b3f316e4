package constructor;

public class Webtoon {

	
	public String name;
	public int series;
	public String painter;
	public boolean complete;
	
	
	public Webtoon(String n,int s, String p, boolean c) {
		
		name=n;
		series=s;
		painter=p;
		complete=false;
		System.out.println("웹툰 정보안내");
		System.out.println("제목은:"+n+",회차는:"+s+",작가:"+p+",완결여부:"+c);
		
	}
	
	public void getlnfo() {
		
		System.out.println("제목:"+name);
		System.out.println("회차:"+series);
		System.out.println("작가:"+painter);
		System.out.println("완결여부:"+complete);
		System.out.println("===========================");
	}
	
	public void uploadWebtoon() {
		
		series+=1;
	}
	
	public void completeWebtton() {
		complete=true;
	}
	
}

