package accessmodifier2;

public class Warri {

	public String name;
	public int hp;
	public int mp;
	public int lv;
	public int atk;
	public int def;
	public int exp;
	
	public Warri(String n) {
		
		name=n;
		hp=20;
		mp=10;
		lv=1;
		atk=3;
		def=0;
		exp=0;
		
		System.out.println("전사 생성완료");
		System.out.println("아이디: "+name+",레벨: "+lv);
	}
	
	public void hunt() {
		hp-=2;
		exp+=10;
		System.out.println("사냥결과 체력이 "+hp+"되었고,누적 경험치는"+exp+"입니다");
	}
	
}
