package intheritance;

public class Basket {

	public String name;
	public int series;
	public String painter;
	public boolean complete;
	
	public Basket(String n,String p) {
		name=n;
		series=1;
		painter=p;
		complete=false;
		
	}
	
	public void getInfo() {
		System.out.println("제목은: "+name+",회차: "+series+",작가: "+painter+",완결여부: "+complete);
	}
	
	public void uploadBesket() {
		series++;
	}
	
	public void completeBasket() {
		complete=true;
	}
}
